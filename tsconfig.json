{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "skipLibCheck": true,
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "**/__mocks__/*",
    "**/__tests__/*"
  ]
}
